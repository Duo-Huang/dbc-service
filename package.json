{
    "name": "dbc",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "concurrently \"pnpm:build:console\" \"pnpm:build:miniapp\"",
        "build:console": "cross-env NODE_ENV=production nest build console --builder webpack",
        "build:miniapp": "cross-env NODE_ENV=production nest build miniapp --builder webpack",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
        "start:console": "cross-env NODE_ENV=development nest start console",
        "start:dev:console": "cross-env NODE_ENV=development nest start console --watch",
        "start:debug:console": "cross-env NODE_ENV=development nest start console --debug --watch",
        "start:prod:console": "cross-env NODE_ENV=production node dist/apps/console/main",
        "start:miniapp": "cross-env NODE_ENV=development nest start miniapp",
        "start:dev:miniapp": "cross-env NODE_ENV=development nest start miniapp --watch",
        "start:debug:miniapp": "cross-env NODE_ENV=development nest start miniapp --debug --watch",
        "start:prod:miniapp": "cross-env NODE_ENV=production node dist/apps/miniapp/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./apps/dbc/test/jest-e2e.json",
        "clean": "rimraf dist",
        "prepare": "husky"
    },
    "lint-staged": {
        "**/*.ts": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "dependencies": {
        "@nestjs/common": "^11.1.6",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.6",
        "@nestjs/platform-fastify": "^11.1.6",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "config": "^4.1.1",
        "dayjs": "^1.11.18",
        "fastify": "^5.6.1",
        "nestjs-pino": "^4.4.1",
        "pino": "^9.13.1",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.37.0",
        "@nestjs/cli": "^11.0.10",
        "@nestjs/schematics": "^11.0.9",
        "@nestjs/testing": "^11.1.6",
        "@types/config": "^3.3.5",
        "@types/jest": "^30.0.0",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^22.18.10",
        "@types/source-map-support": "^0.5.10",
        "@types/supertest": "^6.0.3",
        "concurrently": "^9.2.1",
        "copy-webpack-plugin": "^13.0.1",
        "cross-env": "^10.1.0",
        "eslint": "^9.37.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "js-yaml": "^4.1.0",
        "lint-staged": "^16.2.4",
        "pino-pretty": "^13.1.2",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "source-map-support": "^0.5.21",
        "supertest": "^7.1.4",
        "terser-webpack-plugin": "^5.3.14",
        "ts-jest": "^29.4.5",
        "ts-loader": "^9.5.4",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.0"
    }
}
